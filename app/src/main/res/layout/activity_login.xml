<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3b2f"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="135dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/senhaLogin_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/emailLogin_id"
        android:layout_width="@dimen/tamanho_campo"
        android:layout_height="wrap_content"
        android:layout_marginBottom="277dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Digite seu Email Cadastrado"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/tamanho_fonte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.44" />

    <EditText
        android:id="@+id/senhaLogin_id"
        android:layout_width="@dimen/tamanho_campo"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="°°°°°°°° Senha °°°°°°°°"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/tamanho_fonte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/entrarLogin_id"
        android:layout_width="@dimen/tamanho_campo"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="ENTRAR >>"
        android:textColorLink="@color/common_google_signin_btn_text_light_disabled"
        android:theme="@style/stylepadrao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhaLogin_id" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320sp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="link_cadastro"
        android:text="Não tem Cadastro? Clique aqui ! È gratis e rápido..."
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>